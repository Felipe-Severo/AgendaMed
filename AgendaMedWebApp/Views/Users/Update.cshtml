@model UserModel
@{
    ViewData["Title"] = "Usuário";
}

<div>
    <h3>Usuário</h3>
    <form asp-controller="Users" asp-action="Update" enctype="multipart/form-data" method="post">
        <div class="row">
            <div class="col-md-3 d-flex align-items-center justify-content-center">
                <input asp-for="Pic" type="file" id="uploadFoto" style="display: none;" accept="image/*" onchange="previewFoto()" />
                <div class="form-group">
                    <label for="uploadFoto" style="cursor: pointer;">
                        <div id="fotoPreview" class="rounded-circle border bg-light" style="width: 12rem; height: 12rem;">
                            <img id="fotoDisplay" style="width: 12rem; height: 12rem;" src="/img/userIcon.svg" alt="Foto do usuário" class="img-fluid rounded-circle">
                        </div>
                    </label>
                </div>
            </div>
            <div class="col-md-9">
                <div class="form-group">
                    <label for="pessoa">Nome</label>
                    <input type="text" id="pessoa" class="form-control" asp-for="Pessoa" value="@Model.Pessoa" />
                </div>
                <div class="form-group">
                    <label for="login">Login:</label>
                    <input type="text" id="login" class="form-control" asp-for="Login" value="@Model.Login" />
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="accessType">Tipo de acesso</label>
            <select id="accessType" class="form-select" asp-for="AccessType" selected="@Model.AccessType.GetHashCode()">
                <option value="0">Administrador</option>
                <option value="1">Médico</option>
                <option value="2">Paciente</option>
            </select>
        </div>

        <br />
        <button type="submit" class="btn btn-primary float-end">Salvar</button>
        <a class="btn btn-secondary float-end" asp-controller="Users" asp-action="Index">Voltar</a>
    </form>
</div>
<script>
    window.addEventListener('load', function () {
        console.log('Página carregada');
        getPictureData('USERS', 'PIC', '@Model.Id');
    });
</script>