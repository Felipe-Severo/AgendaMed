@model UserModel
@{
    ViewData["Title"] = "Usuário";
}
<div>
    <h3>Cadastro de usuário</h3>
    <form asp-controller="Users" asp-action="Add" method="post">

        <div class="form-group">
            <label for="login">Login:</label>
            <input type="text" id="login" class="form-control" asp-for="Login" />
        </div>
        <div class="form-group">
            <label for="pessoa">Pessoa:</label>
            <select id="pessoa" class="form-select" asp-for="Pessoa">
                @foreach (PessoaModel pessoa in ViewBag.Pessoas)
                {
                    <option value="@pessoa.Id">@pessoa.Nome</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="text" id="password" class="form-control" asp-for="Password" />
        </div>
        <div class="form-group">
            <label for="accessType">Tipo de acesso:</label>
            <select id="accessType" class="form-select" asp-for="AccessType">
                <option disable>Selecione o tipo de acesso</option>

                @foreach (var tipoAcesso in Enum.GetValues(typeof(AgendaMedWebApp.Business.Genericos.AccessType)))
                {
                    <option value="@tipoAcesso">@tipoAcesso.ToString()</option>
                }
            </select>
        </div>
        <br />
        <button type="submit" class="btn btn-primary float-end">Salvar</button>
        <a class="btn btn-secondary float-end" asp-controller="Users" asp-action="Index">Voltar</a>
    </form>


</div>
 