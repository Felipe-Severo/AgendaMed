@model MedicamentoModel
@{
    ViewData["Title"] = "Medicamentos";
}
<div>
    <h3>Cadastro de medicamento</h3>
    <form asp-controller="Medicamentos" asp-action="Update" method="post">
        <div class="form-group">
            <label for="name">Nome</label>
            <input type="text" id="name" class="form-control" asp-for="Nome" />
        </div>
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <textarea id="descricao" class="form-control" asp-for="Descricao"></textarea>
        </div>
        <div class="form-group">
            <label for="preco">Preço</label>
            <input type="dosage" id="dosagem" class="form-control" asp-for="Dosagem" />
        </div>

        <br />
        <button type="submit" class="btn btn-primary float-end">Salvar</button>
        <a class="btn btn-secondary float-end" asp-controller="Medicamentos" asp-action="Index">Voltar</a>
    </form>
</div>