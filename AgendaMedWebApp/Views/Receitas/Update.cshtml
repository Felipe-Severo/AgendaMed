@model ReceitaModel
@{
    ViewData["Title"] = "Receita";
}
<div>
    <h3>Update de Receita</h3>
    <form asp-controller="Receitas" asp-action="Update" method="post">
        <div class="form-group">
            <label for="date_prescription">Data da Prescrição</label>
            <input type="date" id="date_prescription" class="form-control" asp-for="DataPrescricao" />
        </div>
        <div class="form-group">
            <label for="medicamento">Medicamento</label>
            @*<input type="text" id="medicamento" class="form-control" asp-for="Medicamento" />*@
            <textarea type="text" class="form-control" id="medicamento" asp-for="Prescricao" rows=" 15"></textarea>
        </div>
        <br />
        <button type="submit" class="btn btn-primary float-end">Salvar</button>
        <a class="btn btn-secondary float-end" asp-controller="Receitas" asp-action="Index">Voltar</a>
    </form>
</div>